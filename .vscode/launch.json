{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Bot",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "--allow-read=./",
        "--allow-env",
        "--allow-net",
        "--unstable",
        "--importmap=import_map.json",
        "-c",
        "tsconfig.json",
        "bot.ts"
      ],
      "port": 9229
    }
  ]
}
